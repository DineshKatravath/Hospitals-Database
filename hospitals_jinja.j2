{%- macro facilities(noofdoctors, beds, services,insurance) -%}
	{{ '==సౌకర్యాలు=='+'\n' }}
    {%- if (noofdoctors!= 'nan') -%}
        {%- set line1= ["ఈ ఆసుపత్రిలోని మొత్తం వైద్యుల సంఖ్య ",noofdoctors ,". "] |join('') -%}
